    </head>
    <body>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                        <a class="navbar-brand" href="/"> Let's Camp <i class="fas fa-campground"></i> </a> 

                  </div>
                  
                  <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                      <li class="nav-item"><a href="/campgrounds">Home</a></li>
                    </ul>
               
                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav navbar-right">

                            <form action="/campgrounds" method="GET" class="navbar-form navbar-left" >
                                <div class="form-group">
                                    <input type="text" name="search" placeholder="Campground search..." class="form-control mr-sm-2">
                                    
                                    <button class="btn btn-secondary" type="button">
                                        <i class="fa fa-search"></i>
                                      </button>
                                    
                                    
                                </div>
                            </form>

                            <% if(!currentUser){ %>
                            <li><a href="/login">Sign In <i class="fas fa-sign-in-alt"></i></a></li>                      
                            <li><a href="/register">Sign up <i class="fas fa-user-plus"></i></a></li>
                       <% } else { %>
                        
                            <li><a href="#">Signed In As <%= currentUser.username %></a></li>
                           
                            <li><a href="/logout">Sign out <i class="fas fa-sign-out-alt"></i></a></li>
                       <% } %>
                        </ul>
                    </div>
                </div>
            
        </nav>
       
        
    <div class="container">

        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>

        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success %>
            </div>
         <% } %>
    </div>
    

    