<%- include ('../partials/header'); %>

<div class="row">
	<div class="col-md-4">
			<h1 class="text-center">  <%= user.firstName.toUpperCase()  + " " + user.lastName.toUpperCase() %></h1>
		<div class="thumbnail" style="border: none;">
			
			<img id="userImage" src="<%= user.userImage %>" alt="user profile image" >
			<div class="caption text-center"><a href="#"><i class="fas fa-user"></i>  <%= user.firstName.toUpperCase()  + " " + user.lastName.toUpperCase() %></a></div>
			<div class="caption text-center"><a href="mailto:<%= user.email %>"><i class="fas fa-envelope"></i> <%= user.email %></a></div>
			<div class="caption text-center"><a href="#"> <i class="fas fa-phone-alt"></i> <%= user.mobile %></a></div>
		</div>
		

	</div>
	<div class="col-md-8">
		<div>
			<h3>About <%= user.firstName.charAt(0).toUpperCase() + user.firstName.slice(1)%></h3>
			<p><%= user.userInfo %>
